<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
        <property name="show_sql">true</property>
        <mapping class="com.anka.inheritance.asset.Asset"/>
        <mapping class="com.anka.inheritance.asset.FBAsset"/>
        <mapping class="com.anka.inheritance.asset.TWAsset"/>
        <mapping class="com.anka.inheritance.person.Person"/>
        <mapping class="com.anka.inheritance.person.Group"/>
    </session-factory>
</hibernate-configuration>